<h1> Edit All Menus At Once </h1>

<div class="col-sm-12 col-md-12 container">
  <%= link_to "Delete All Lunches", menu_delete_all_lunches_path(@menu.id), class: "btn btn-success", method: :post  %>
  <%= link_to "Populate Menus With Blank Lunches", menu_populate_with_blanks_path(@menu.id), class: "btn btn-success", method: :post  %>

  <div class="row lunch_row text-center jumbotron">
    <div class="col-sm-2 col-md-2 text-center"><h4>Date</h4></div>
    <div class="col-sm-10 col-md-10 text-center"><h4>Lunches</h4></div>  
  </div>

  <% @dates.each do |date| %> 
  <div class="col-sm-2 col-md-2 col-lg-2 date_box text-center">
      <h4><%="#{weekday_on(date)}"%></h4> 
      <h4><%="#{date}"%></h4> 
    </div>
    <div class="row lunch_row text-center date_id_<%=date.to_s%>">
      <div class="container center_column">
        <% @menu.lunches_for_day(date).each do |lunch| %>
          <%= render partial: 'lunch_choices/edit_lunch_ch_row', locals: { lunch: lunch, user: @user } %> 
        <% end %>
      </div>
    </div>
    <br>
    <hr>
  <% end %>
</div>

