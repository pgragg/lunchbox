<div class="col-md-12">
  <% if policy(Menu.new).create? %>
    <%= link_to "New Menu", new_menu_path, class: 'btn btn-success' %>
  <% end %>
</div>

<div class="col-md-12 jumbotron">
  <% @lunches.each do |lunch| %>
    <div class="col-md-3"><h6><%= link_to lunch.name, lunch %></h6></div> 
    <div class="col-md-3"><%= lunch.description %></div> 
    <div class="col-md-3"><%= lunch.date %></div> 
    <div class="col-md-3"><%= render partial: 'lunch_choices/lunch_choice', locals: { lunch: lunch, user: current_user } %> </div>
    <br>
    <hr>
  <% end %>
</div>