
<%= form_tag users_path, :method => 'get', :id => "users_search" do %>
  <p>
    <%= text_field_tag :search_term, params[:search_term], placeholder: "eg. \"last_name\"" %>
    <%= text_field_tag :search, params[:search], placeholder: "eg. \"Smith\"" %>

    <%= submit_tag "Search", :search => nil%>
  </p>
  <% if @users %> 
    <div id="users"><%= render partial: 'users', locals: {users: @users } %></div>
  <% end %> 
<% end %>
