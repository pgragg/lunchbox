<div class = "container"> 
  <div class = "text-center">
    <h2>Where should we send your lunches?</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control"  %>
    </div>

    <div class="form-group">
      <%= f.label :campus %> <i> (choose DWT for 18/22 W. 89th street) </i><br>
      <%= f.select(:campus, %w[ECD DWT], {include_blank: false}, { :class => 'form-control' }) %>
    </div>
    
    <% if current_user.role == "faculty" || current_user.role == "staff" %>
      <div class="form-group">
         <%= f.label :role %> <br>
         <%= f.select(:role, %w[faculty staff], {include_blank: false}, { :class => 'form-control' }) %>
      </div>

      <div class="form-group">
         <%= f.label :grade_level_delivery %> <i> Select a grade only if you would like your lunches specially delivered to that homeroom. </i><br>
         <%= f.select(:grade, %w[threes fours k 1 2 3 4 5], {include_blank: true}, { :class => 'form-control' }) %>
      </div>
    <%end %>

    <div class="form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="actions">
      <%= f.submit "Update", class: "btn btn-success" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Would you like to cancel this account? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? All lunch choices will be lost." }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
