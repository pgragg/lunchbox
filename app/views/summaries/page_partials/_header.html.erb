<!-- This is the header to each summary page, before the table. It acts as navigation.  -->

<div class = "text-center"> 
  <div class = "row"> 
    <div class = "col-md-12 col-sm-12"> 
      <div class = "col-md-3 col-sm-3"> 
        <%= link_to "Previous Day", summary_previous_day_path(@summary), class: "btn btn-success", method: :post  %>
      </div>

      <div class = "col-md-6 col-sm-6"> 
        <h1> <%= "#{@weekday}, #{@month} #{@date.day}" %> </h1> 
      </div>

      <div class = "col-md-3 col-sm-3"> 
        <%= link_to "Next Day", summary_next_day_path(@summary), class: "btn btn-success", method: :post  %>
      </div>
    </div>
  </div>

  