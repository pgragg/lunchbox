<tr> 
  <td> <%="#{user.first_name} #{user.last_name}"%></td>
<!--  user.show_grade_or_role -->

<% lunches = Menu.find(user.menu_id).lunches.by_day(date).count %> 
  <%i = 0 %> 
  <% lunches.times do %> <!-- Once for each lunch choice. --> 
    <!-- i stands for lunch number.  -->
      <td> <%= user.choice_for?(date, i) %></td> 
    <%i += 1 %>
  <% end %> 
</tr>




