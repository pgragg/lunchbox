<div class="col-md-8 center">
 <%= form_for [@year, @trimester] do |f| %><!--   , remote: true -->
   <div class="form-group">
     <%= f.label :number %>
     <%= f.text_field :number, class: 'form-control', placeholder: "eg. \"1\"" %>
   </div>
   <div class="form-group">
     <%= f.label :start_date %>
     <%= f.text_field :start_date, class: 'form-control', placeholder: "eg. \"2015-12-19\"" %>
   </div>
   <div class="form-group">
     <%= f.label :end_date %>
     <%= f.text_field :end_date, class: 'form-control', placeholder: "eg. \"2016-1-05\"" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>
</div>

