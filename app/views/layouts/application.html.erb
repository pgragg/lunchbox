<!DOCTYPE html>
<html>
<head>
  <title>Lunchbox</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="https://www.dwight.edu/favicon.ico" /> 
</head>
<body>
  <% if flash[:notice] %>
  
   <div class="alert alert-success">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
     <%= flash[:notice] %>
   </div>
  <% elsif flash[:error] %>
   <div class="alert alert-danger">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
     <%= flash[:error] %>
   </div>
  <% elsif flash[:alert] %>
   <div class="alert alert-warning">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
     <%= flash[:alert] %>
   </div>

  <% end %>
  <% if current_user %> 
  <ul class="nav nav-tabs text-center"> 
    <% if policy(Menu.new).children? %>
      <li class= "col-md-4"> <%= link_to "My Children (#{current_user.children.count})", user_children_path(current_user.id) %> </li> 
    <% end %>
    <% if current_user && (current_user.faculty? || current_user.staff?) %>
      <li class= "col-md-4"> <%= link_to "My Menu", menu_path(current_user.id) %> </li> 
    <% end %>
    <% if policy(Menu.new).create? && current_user.menu_id != nil %>
      <li class= "col-md-4"> <%= link_to "Menus", menu_index_path %> </li> 
    <% end %>
    <% if policy(Menu.new).create? %>
      <li class= "col-md-4"> <%= link_to "Control Panel", admin_panel_index_path %> </li> 
    <% end %>
    <% if current_user %>
      <li class= "col-md-4"><%= link_to (current_user.first_name || current_user.email), edit_user_registration_path %></li> 
      <li class= "col-md-4"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
      <%end%>
  </ul>
  <% end %>
  <div class="container <%="summary" if @summary %>">
    <%= yield %>
  </div>

</body>
</html>
