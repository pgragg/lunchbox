<!DOCTYPE html>
<html>
<head>
  <title>Lunchbox</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
  <ul class="nav nav-tabs"> 
    <% if policy(Menu.new).children? %>
      <li> <%= link_to "My Children (#{current_user.children.count})", user_children_path(current_user.id) %> </li> 
    <% end %>
    <% if current_user.faculty? %>
      <li> <%= link_to "My Menu", menu_path(current_user.id) %> </li> 
    <% end %>
    <% if policy(Menu.new).create? && current_user.menu_id != nil %>
      <li> <%= link_to "Menus", menu_index_path %> </li> 
    <% end %>
    <% if policy(Menu.new).create? && current_user.menu_id == nil && current_user.role == "faculty" %>
      <li> <%= link_to "Get Started", edit_user_path(current_user.id) %> </li> 
    <% end %>
    <% if policy(Menu.new).create? %>
      <li> <%= link_to "Summaries", summaries_path %> </li> 
    <% end %>
    <% if current_user %>
      <li><%= link_to (current_user.first_name || current_user.email), edit_user_registration_path %></li> 
      <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
      <%end%>
  </ul>

  <% if flash[:notice] %>
  
   <div class="alert alert-success">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
     <%= flash[:notice] %>
   </div>
  <% elsif flash[:error] %>
   <div class="alert alert-danger">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
     <%= flash[:error] %>
   </div>
  <% elsif flash[:alert] %>
   <div class="alert alert-warning">
     <button type="button" class="close" data-dismiss="alert">&times;</button>
     <%= flash[:alert] %>
   </div>

  <% end %>
    <%= yield %>
  </div>

</body>
</html>
