<div class="col-md-8">
 <%= form_for [@user, @child] do |f| %><!--   , remote: true -->
   <div class="form-group">
     <%= f.label :name %>
     <%= f.text_field :name, class: 'form-control', placeholder: "eg. \"Susan Smith\"" %>
   </div>
   <div class="form-group">
     <%= f.label :grade %>
     <%= f.text_field :grade, class: 'form-control', placeholder: "eg. \"7\"" %>
   </div>
   <div class="form-group">
     <%= f.label :email %>
     <%= f.email_field :email, class: 'form-control', placeholder: "eg. \"2019ssmith@dwight.edu\"" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>
</div>

