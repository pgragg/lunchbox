<div class="col-md-8 col-sm-8 center">
 <%= form_for [@user, @child] do |f| %><!--   , remote: true -->
   <div class="form-group">
     <%= f.label :first_name %>
     <%= f.text_field :first_name, class: 'form-control', placeholder: "eg. \"Susan\"" %>
   </div>
   <div class="form-group">
     <%= f.label :last_name %>
     <%= f.text_field :last_name, class: 'form-control', placeholder: "eg. \"Appleseed\"" %>
   </div>
   <div class="form-group">
     <%= f.label :grade %>
     <%= f.select(:grade, Child::GRADES, {include_blank: false}, { :class => 'form-control' }) %>
    <!-- TODO: grouped_options_for_select(grouped_options, selected_key = nil, options = {}) -->
   </div>
   <div class="form-group text-center">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>
</div>

