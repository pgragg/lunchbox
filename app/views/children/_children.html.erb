<tr class=""> <h1 class="text-center"> Children </h1> </tr>
  <tr> 
    <td><h3>Name</h3></td> 
    <td><h3>Grade </h3></td> 
    <td><h3>Campus</h3></td> 
    <td><h3> </h3></td> 
  </tr> 
  <%@children.each do |child| %> 
    <tr> 
    <td> <%="#{child.first_name} #{child.last_name}"%></td> 
    <td> <%=child.grade %> </td> 
    <td> <%=child.campus =="DWT" ? "89th street - Main Campus" : "Early Childhood Division (ECD)"%> </td> 
    <td> 
        <%if child.menu_id != nil%>
        <%= link_to "Menu", user_child_menu_path(@user, child, child.menu_id), class:"btn btn-success"%> 
        <%end%>
    </td>
    <td> <%= link_to "Edit", edit_user_child_path(@user, child), class:"btn btn-warning"%></td>
    <td> <%= link_to "Remove", user_child_path(@user, child), method: :delete, class:"btn btn-danger"%></td>
    </tr> 
  <% end %>
</table>
